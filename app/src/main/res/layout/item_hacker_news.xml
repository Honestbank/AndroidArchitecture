<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="news.ta.com.news.feature.hackernewslist.HackerNewsItem" />

        <variable
            name="viewModel"
            type="news.ta.com.news.feature.hackernewslist.hackernewsitem.HackerNewsItemViewModel" />

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{listener}"
        android:orientation="vertical"
        android:padding="@dimen/gap_m">

        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="16dp"
            android:layout_height="50dp"
            app:show="@{viewModel.loading}" />


        <TextView
            style="@style/News.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:htmlString="@{viewModel.topic.title}"
            app:show="@{!viewModel.loading}"
            tools:text="Headline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:show="@{!viewModel.loading}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_by" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.topic.by}" />

            <View
                android:layout_width="@dimen/line"
                android:layout_height="@dimen/gap_m"
                android:layout_marginLeft="@dimen/gap_s"
                android:layout_marginRight="@dimen/gap_s"
                android:background="@color/line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:rawValue="@{viewModel.topic.commentCount}"
                app:stringFormatRes="@{@plurals/comments}" />


        </LinearLayout>

    </LinearLayout>

</layout>